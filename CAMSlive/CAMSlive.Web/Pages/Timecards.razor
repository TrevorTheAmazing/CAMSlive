@page "/timecards"
@inherits TimecardsBase
@layout MainLayout

<style>
    body {
        background-color: #d8e7ef;
    }
</style>

<h1 style="color: #15416e; ">Timecards Dashboard</h1>
<hr />
<div id="timecards" class="container">


    @if (TimecardCharts == null)
    {
        <div class="container">
            <div class="spinner"></div>
        </div>

    }
    else
    {
        <div class="cards">

            @foreach (var chart in TimecardCharts)
            {
                if ((chart.ChartOptions.IndexOf("bubble") > -1) || (chart.ChartOptions.IndexOf("bar") > -1) || (chart.ChartOptions.IndexOf("area") > -1))
                {
                    <div class="card">
                        <div class="card-header">@chart.ChartId</div>
                        <div class="card-body">
                            <Chart ChartId="@chart.ChartId" ChartOptions="@chart.ChartOptions"></Chart>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card split">
                        <div class="card-header">@chart.ChartId</div>
                        <div class="card-body">
                            <Chart ChartId="@chart.ChartId" ChartOptions="@chart.ChartOptions"></Chart>
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>

<div class="scrollToTop">
    <a href="/timecards">
        <svg class="bi bi-arrow-up-circle-fill" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-10.646.354a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 6.207V11a.5.5 0 0 1-1 0V6.207L5.354 8.354z" />
        </svg>
    </a>
</div>